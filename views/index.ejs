<div class="author">
    <h1 class="author__heading">Hi, I am Tonii.</h1>
    <p class="author__body">Web developer</p>
</div>

<div class="img-index">
    <img src="./img/devEvolution.jpg" width="60%">
</div>

<section class="post">
    <p class="post__heading">Lastest Posts</p>

    <% data.forEach(post => { %>
        <a href="/post/<%= post.id %>" class="post__item">
            <p class="post__title"><%= post.title %></p>
            <p class="post__date"><%= post.createAt.toDateString() %></p>
        </a>
    <% }) %>
 
    
    <% if (nextPage !== null) { %>
        <a href="/?page=<%= nextPage %>" class="pagination">&lt; View Older Posts</a>
    <% } %>

</section>